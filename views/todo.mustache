<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>To Do List</title>
  </head>
  <body>
    <div class="container">

      <div class="heading">
        <h1>Awesome To Do List Maker</h1>
        <h2 id="vol1">Vol. 2.0</h2>
      </div>

      <div class="errors">
        {{#error}}
        <h1>{{#todo}}{{msg}}{{/todo}}</h1>
        {{/error}}
      </div>

      <div class="input-form">
        <form class="add-todo" action="todo/add" method="post">
          <input type="text" name="todo" value="" placeholder="Add a to do...">
          <!-- <button type="submit" name="todoSubmit">Add Todo</button> -->
        </form>
      </div>

      <div class="incomplete-tasks">
        <ul>
          {{#todoList}}
          {{^complete}}
          <li>
            <form class="mark-complete" action="/todo/:{{id}}/complete" method="post">
              <button type="submit" name="taskComplete">Mark complete</button>
              <label for="{{task}}">{{task}}</label>
            </form>
          </li>
          {{/complete}}
          {{/todoList}}
        </ul>
      </div>

      <div class="complete-tasks">
        <h3>Complete Tasks</h3>
        <ul>
          {{#todoList}}
          {{#complete}}
          <li>{{task}}</li>
          {{/complete}}
          {{/todoList}}
        </ul>
      </div>
    </div>
  </body>
</html>
